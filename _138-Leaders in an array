class Solution{
  static ArrayList<Integer> leaders(int arr[], int n){
      int maxSoFar=-1;
	    ArrayList<Integer>res=new ArrayList<>();
	    
      for(int i=(n-1);i>=0;i--)
        if(arr[i]>=maxSoFar)
        {
          res.add(arr[i]);
          maxSoFar=arr[i];  
        }
         
      Collections.reverse(res);
        
    return res;
  }
}
