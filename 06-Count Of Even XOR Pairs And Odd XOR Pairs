/*
Note : This Questiton is Similar to Q-5
*/

//Bruteforce Approach

class Solution {
    public static void countEvenOddXorPairs(int[] arr) {
        int evenXorCount = 0, oddXorCount = 0;

        for (int i = 0; i < arr.length; i++) {
            for (int j = i + 1; j < arr.length; j++) {
                if ((arr[i] ^ arr[j]) % 2 == 0) {
                    evenXorCount++;
                } else {
                    oddXorCount++;
                }
            }
        }

        System.out.println("Count of Pairs With Even XOR = " + evenXorCount);
        System.out.println("Count of Pairs With Odd XOR = " + oddXorCount);
    }
}


/* Optimal Approach

=>Even XOR
  
Even Element + Even Element =Even XOR
Odd Element + Odd Element =Even XOR
  
=>Odd Sum
  
Even Element + Odd Element =Odd XOR
*/

class Solution {
    public static void countXorPairs(int[] arr) {
        int evenCount = 0;

        for (int num : arr) {
            if ((num % 2) == 0) {
                evenCount++;
            }
        }

        int oddCount = arr.length - evenCount;
        int evenXorPairCount = (evenCount * (evenCount - 1)) / 2 + (oddCount * (oddCount - 1)) / 2;
        int oddXorPairCount = evenCount * oddCount;

        System.out.println("Count of Pairs With Even XOR = " + evenXorPairCount);
        System.out.println("Count of Pairs With Odd XOR = " + oddXorPairCount);
    }
}
