public class Solution {
    public int solve(ArrayList<Integer> arr, int k) {
        int n = arr.size();
        int breakPoint = findBreakPoint(arr, n);

        int index = binarySearch(arr, 0, breakPoint, k, true);
        if (index != -1) {
            return index;
        }

        return binarySearch(arr, breakPoint + 1, n - 1, k, false);
    }

    private int findBreakPoint(ArrayList<Integer> arr, int n) {
        for (int i = 0; i < n - 1; i++) {
            if (arr.get(i) > arr.get(i + 1)) {
                return i;
            }
        }
        return n - 1; // No breakpoint means strictly increasing array
    }

    private int binarySearch(ArrayList<Integer> arr, int low, int high, int key, boolean isAscending) {
        while (low <= high) {
            int mid = low + (high - low) / 2;
            int val = arr.get(mid);

            if (val == key) {
                return mid;
            }

            if (isAscending) {
                if (key < val) {
                    high = mid - 1;
                } else { // if (key > val)
                    low = mid + 1;
                }
            } else {
                if (key > val) {
                    high = mid - 1;
                } else { // if (key < val)
                    low = mid + 1;
                }
            }
        }

        return -1; // key doesnot exists
    }
}
