//Forward Direction

class Solution{
  public static void driver(int[]arr){
      printArray(arr,0);    
  }
    
	public static void printArray(int[] arr,int i){
	    
	   if(i==arr.length)
		 return;
		
	   System.out.print(arr[i]+" ");
	   printArray(arr,i+1);
	}
}


//Backward Direction 

class Solution{
  public static void driver(int[]arr){
      printArray(arr,arr.length-1);    
  }
    
	public static void printArray(int[] arr,int i){
	    
	   if(i<0)
		 return;
		
	   System.out.print(arr[i]+" ");
	   printArray(arr,i-1);
	}
}
