class Solution {
    public static int equilibriumPoint(long arr[], int n) {
        long arrSum=0,leftSum=0;
	    for(int i=0;i<n;i++)
	      arrSum+=arr[i];
	    
          for(int i=0;i<n;i++)
          {
             arrSum=arrSum-arr[i];//act as rightSum
             
             if(leftSum==arrSum)
               return i+1; //Position=index+1
               
             leftSum+=arr[i];
          }
          
         return -1;       
    }
}
